package tp1;

public class classlivre {
	//attri
	private String titre;
	private String auteur;
	private int anneepublication;

	public classlivre main(String titre, String auteur, int anneepublication) {
		this.titre = titre;
	    this.auteur = auteur;
	    this.anneepublication = anneepublication;
	}
    public static void main(String[] args) {
        classlivre livre = new classlivre("le titre du livre", "nom de l'auteur", "lannee de publication");
        
        System.out.println("Titre: " + livre.titre);
        System.out.println("Auteur: " + livre.auteur);
        System.out.println("Ann√©e de publication: " + livre.anneepublication);
    }
    public String toString() {
        return titre + ", " + auteur + ", " + anneepublication;
    }
}
    
